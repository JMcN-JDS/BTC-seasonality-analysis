***Hourly Candle Body Ratio, Bitstamp

library(ggplot2)
library(ggthemes)
ggplot(bitstamp1h, aes(x=Hour, y=Day, fill = Candle_Body_Ratio)) + 
  geom_tile(color = "white", size = 0.1) + 
  scale_x_discrete(expand=c(0,0)) + 
  scale_y_discrete(expand=c(0,0)) + 
